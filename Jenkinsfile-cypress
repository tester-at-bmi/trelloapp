pipeline {

    agent any

    parameters {
        string(name: 'SPEC', defaultValue: 'cypress/e2e/**/**', description: '')
        choice(name: 'BROWSER', choices: ['chrome', 'edge', 'firefox', 'webkit'], description: '')
    }

    options {
        ansiColor('xterm')
    }

    tools {
        nodejs 'node' // Specify the Node.js installation defined in Jenkins Global Tool Configuration
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm i --force --legacy-peer-deps"
                        sh "npx playwright install-deps webkit"
                    } else {
                        bat "npm i --force --legacy-peer-deps"
                    }
                }
            }
        }

        stage('Start Application') {
            steps {
                echo "Starting the application"
            }
        }

        stage('Start Tests') {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm run start && npx cypress run -b ${BROWSER} --spec ${SPEC} --env grepTags=@${BROWSER} --headless"
                    } else {
                        bat "npm run start && npx cypress run -b ${BROWSER} --spec ${SPEC} --env grepTags=@${BROWSER} --headless"
                    }
                }
            }
        }

        stage('Generate HTML Report') {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm run cy:posttest"
                    } else {
                        bat "npm run cy:posttest"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application"
            }
        }
    }

    post {
        always {
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'cypress-report', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: ''])
        }
    }
}